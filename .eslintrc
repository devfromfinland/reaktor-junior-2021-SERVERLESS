{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "linebreak-style": [2, "unix"],
    "indent": ["error", 2],
    "arrow-body-style": "off",
    "comma-dangle": "off",
    "import/no-unresolved": "off",
    "no-console": "warn",
    "no-param-reassign": "off",
    "no-plusplus": "off",
    "no-unused-vars": "warn",
    "import/prefer-default-export": "off"
  }
}
